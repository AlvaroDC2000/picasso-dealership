<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="800" prefWidth="1100.0" styleClass="root"
            xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="dealership.controllers.CustomerDetailsController">

    <Button fx:id="backButton"
            layoutX="1040" layoutY="25"
            prefWidth="40" prefHeight="40"
            onAction="#handleBack"
            text="â€¹"
            style="-fx-background-color: transparent;
                   -fx-text-fill: #2563EB;
                   -fx-font-size: 34px;
                   -fx-font-weight: 700;
                   -fx-padding: 0;" />

    <Label layoutX="300" layoutY="40"
           text="Customer details"
           style="-fx-font-size: 56px; -fx-font-weight: 800;" />

