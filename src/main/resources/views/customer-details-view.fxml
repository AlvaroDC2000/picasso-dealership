        <VBox spacing="18">
            <Label fx:id="nameLabel" style="-fx-font-size: 22px; -fx-text-fill: #6B7280;" />
            <Label fx:id="phoneLabel" style="-fx-font-size: 22px; -fx-text-fill: #6B7280;" />
            <Label fx:id="emailLabel" style="-fx-font-size: 22px; -fx-text-fill: #6B7280;" />
            <Label fx:id="vehicleLabel" style="-fx-font-size: 22px; -fx-text-fill: #6B7280;" />
        </VBox>

    </VBox>

    <Button layoutX="390" layoutY="660"
            prefWidth="320" prefHeight="64"
            text="Notify customer"
            onAction="#handleNotify"
            style="-fx-background-color: white;
                   -fx-border-color: black;
                   -fx-font-size: 24px;
                   -fx-font-weight: 600;" />

</AnchorPane>

