<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="800" prefWidth="1100.0" styleClass="root"
            xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="dealership.controllers.MechanicTasksController">

    <!-- LOGO  -->
    <ImageView fitHeight="100"
               preserveRatio="true"
               pickOnBounds="true"
               AnchorPane.topAnchor="18"
               AnchorPane.rightAnchor="24">
        <image>
            <Image url="@/images/LogoConcesionario.png"/>
        </image>
    </ImageView>

    <Label layoutX="40" layoutY="30"
           text="My tasks"
           style="-fx-font-size: 42px; -fx-font-weight: 700;" />

    <VBox layoutX="124.0" layoutY="120"
          prefHeight="546.0" prefWidth="848.0"
          spacing="10"
          style="-fx-background-color: white;
                 -fx-border-color: #E6EAF0;
                 -fx-border-radius: 8px;
                 -fx-background-radius: 8px;">

        <HBox style="-fx-padding: 20 20 10 20;">
            <Label text="Assigned repairs"
                   style="-fx-font-size: 18px; -fx-font-weight: 600;" />
        </HBox>

        <VBox prefHeight="477.0" prefWidth="729.0"
              spacing="10"
              style="-fx-padding: 0 20 20 20;">
            <TableView fx:id="tasksTable"
                       prefHeight="520"
                       style="-fx-border-color: #E6EAF0;">
                <columns>
                    <TableColumn fx:id="repairIdColumn" prefWidth="140" text="Repair ID" />
                    <TableColumn fx:id="vehicleColumn" prefWidth="360" text="Vehicle" />
                    <TableColumn fx:id="statusColumn" prefWidth="180" text="Status" />
                    <TableColumn fx:id="actionColumn" prefWidth="120" text="Action" />
                </columns>
            </TableView>
        </VBox>
    </VBox>

    <Button layoutX="40.0" layoutY="706.0"
            prefHeight="44" prefWidth="140"
            text="Log out"
            onAction="#handleLogout"
            style="-fx-border-color: black;
                   -fx-background-color: transparent;
                   -fx-font-weight: 600;" />

    <Button layoutX="910.0" layoutY="690.0"
            prefHeight="60" prefWidth="160"
            text="History"
            onAction="#handleHistory"
            style="-fx-background-color: white;
                   -fx-border-color: #E6EAF0;
                   -fx-font-size: 18px;
                   -fx-font-weight: 600;" />

</AnchorPane>

