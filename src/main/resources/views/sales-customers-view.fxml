<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="650.0"
            prefWidth="740.0"
            styleClass="content-root"
            xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="dealership.controllers.SalesCustomersController">

    <center>
        <VBox spacing="16.0" style="-fx-padding: 24;">

            <!-- Title -->
            <Label text="Customers" styleClass="content-title"/>

            <!-- Search bar -->
            <HBox spacing="10.0" alignment="CENTER_LEFT" style="-fx-background-color: white; -fx-padding: 10;">
                <Label text="ðŸ”" style="-fx-font-size: 16;"/>
                <TextField fx:id="searchField" promptText="Search by name" HBox.hgrow="ALWAYS"/>
            </HBox>

            <!-- Table -->
            <VBox style="-fx-background-color: white; -fx-padding: 14;">
                <TableView fx:id="customersTable" prefHeight="420.0">
                    <columns>
                        <TableColumn fx:id="nameCol" text="Name" prefWidth="240.0"/>
                        <TableColumn fx:id="emailCol" text="Email" prefWidth="260.0"/>
                        <TableColumn fx:id="phoneCol" text="Phone" prefWidth="150.0"/>
                        <TableColumn fx:id="actionCol" text="Action" prefWidth="90.0"/>
                    </columns>
                </TableView>
            </VBox>

            <!-- Bottom button -->
            <HBox>
                <Pane HBox.hgrow="ALWAYS"/>
                <Button text="New customer" onAction="#handleNewCustomer" styleClass="primary-button"/>
            </HBox>

        </VBox>
    </center>

</BorderPane>
