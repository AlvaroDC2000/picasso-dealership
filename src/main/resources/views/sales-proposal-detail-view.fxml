<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="650.0"
            prefWidth="740.0"
            styleClass="content-root"
            xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="dealership.controllers.SalesProposalDetailController">

    <center>
        <VBox spacing="18.0" style="-fx-padding: 24;">

            <!-- Header -->
            <HBox alignment="CENTER_LEFT">
                <Label text="Proposal details" styleClass="content-title"/>
                <Pane HBox.hgrow="ALWAYS"/>
                <fx:include source="/views/sales-header.fxml"/>
                <Button text="‹" onAction="#handleBack" styleClass="btn-back-mech"/>
            </HBox>

            <!-- Main card -->
            <VBox spacing="26.0" style="-fx-background-color: white; -fx-padding: 56 70 56 70;">

                <HBox spacing="14.0" alignment="CENTER_LEFT">
                    <Label text="Customer:" styleClass="detail-label"/>
                    <Label fx:id="customerValue" text="-" styleClass="detail-value"/>
                </HBox>

                <HBox spacing="14.0" alignment="CENTER_LEFT">
                    <Label text="Vehicle:" styleClass="detail-label"/>
                    <Label fx:id="vehicleValue" text="-" styleClass="detail-value"/>
                </HBox>

                <HBox spacing="14.0" alignment="CENTER_LEFT">
                    <Label text="Price (€):" styleClass="detail-label"/>
                    <TextField fx:id="priceField"
                               prefWidth="220.0"
                               styleClass="detail-edit"/>
                </HBox>

                <HBox spacing="14.0" alignment="TOP_LEFT">
                    <Label text="Notes:" styleClass="detail-label"/>
                    <TextArea fx:id="notesArea"
                              prefWidth="420.0"
                              prefRowCount="3"
                              wrapText="true"
                              styleClass="detail-edit"/>
                </HBox>

                <HBox spacing="14.0" alignment="CENTER_LEFT">
                    <Label text="Status:" styleClass="detail-label"/>
                    <Label fx:id="statusValue" text="-" styleClass="detail-value"/>
                </HBox>

            </VBox>

            <HBox alignment="CENTER" spacing="14.0" style="-fx-padding: 18 0 0 0;">

		    <Button fx:id="editButton"
		            text="Edit"
		            onAction="#handleEdit"
		            styleClass="btn-secondary"/>
		
		    <Button fx:id="saveButton"
		            text="Save"
		            onAction="#handleSave"
		            styleClass="btn-primary"/>
		
		    <Button fx:id="acceptButton"
		            text="Register sale"
		            onAction="#handleAccept"
		            styleClass="btn-primary"/>
		
		    <Button fx:id="deleteButton"
		            text="Delete"
		            onAction="#handleDelete"
		            styleClass="danger-button"/>
		
		</HBox>
            

        </VBox>
    </center>

</BorderPane>

