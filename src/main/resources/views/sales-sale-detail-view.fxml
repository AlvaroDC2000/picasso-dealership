<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="650.0"
            prefWidth="740.0"
            styleClass="content-root"
            xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="dealership.controllers.SalesSaleDetailController">

    <center>
        <VBox spacing="18.0" style="-fx-padding: 24;">

            <HBox alignment="CENTER_LEFT">
                <Label text="Sale details" styleClass="content-title"/>
                <Pane HBox.hgrow="ALWAYS"/>
                <fx:include source="/views/sales-header.fxml"/>
                <Button text="‹" onAction="#handleBack" styleClass="btn-back-mech"/>
            </HBox>

            <VBox spacing="26.0" style="-fx-background-color: white; -fx-padding: 56 70 56 70;">

                <HBox spacing="14.0" alignment="CENTER_LEFT">
                    <Label text="Customer:" styleClass="detail-label"/>
                    <Label fx:id="customerValue" text="-" styleClass="detail-value"/>
                </HBox>

                <HBox spacing="14.0" alignment="CENTER_LEFT">
                    <Label text="Vehicle:" styleClass="detail-label"/>
                    <Label fx:id="vehicleValue" text="-" styleClass="detail-value"/>
                </HBox>

                <HBox spacing="14.0" alignment="CENTER_LEFT">
                    <Label text="Price (€):" styleClass="detail-label"/>
                    <Label fx:id="priceValue" text="-" styleClass="detail-value"/>
                </HBox>

                <HBox spacing="14.0" alignment="CENTER_LEFT">
                    <Label text="Sale date:" styleClass="detail-label"/>
                    <Label fx:id="saleDateValue" text="-" styleClass="detail-value"/>
                </HBox>

                <HBox spacing="14.0" alignment="CENTER_LEFT">
                    <Label text="Notes :" styleClass="detail-label"/>
                    <Label fx:id="notesValue" text="-" styleClass="detail-value"/>
                </HBox>

            </VBox>

        </VBox>
    </center>

</BorderPane>
