<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="800" prefWidth="1100.0" styleClass="root" xmlns="http://javafx.com/javafx" 
			xmlns:fx="http://javafx.com/fxml/1" 
			fx:controller="dealership.controllers.MechanicTasksController">

    <Label layoutX="40" layoutY="30" style="-fx-font-size: 42px; -fx-font-weight: 700;" text="My tasks" />

    <VBox layoutX="124.0" layoutY="120" prefHeight="546.0" prefWidth="848.0" spacing="10" style="-fx-background-color: white; -fx-border-color: #E6EAF0; -fx-border-radius: 8px; -fx-background-radius: 8px;">

        <HBox style="-fx-padding: 20 20 10 20;">
            <Label style="-fx-font-size: 18px; -fx-font-weight: 600;" text="Assigned repairs" />
        </HBox>

        <VBox prefHeight="477.0" prefWidth="729.0" spacing="10" style="-fx-padding: 0 20 20 20;">
            <TableView fx:id="tasksTable" prefHeight="520" style="-fx-border-color: #E6EAF0;">
                <columns>
                    <TableColumn fx:id="repairIdColumn" prefWidth="140" text="Repair ID" />
                    <TableColumn fx:id="vehicleColumn" prefWidth="360" text="Vehicle" />
                    <TableColumn fx:id="statusColumn" prefWidth="180" text="Status" />
                    <TableColumn fx:id="actionColumn" prefWidth="120" text="Action" />
                </columns>
            </TableView>
        </VBox>
    </VBox>

    <Button layoutX="40.0" layoutY="706.0" onAction="#handleLogout" prefHeight="44" prefWidth="140" style="-fx-border-color: black; -fx-background-color: transparent; -fx-font-weight: 600;" text="Log out" />

    <Button layoutX="910.0" layoutY="690.0" onAction="#handleHistory" prefHeight="60" prefWidth="160" style="-fx-background-color: white; -fx-border-color: #E6EAF0; -fx-font-size: 18px; -fx-font-weight: 600;" text="History" />

</AnchorPane>
