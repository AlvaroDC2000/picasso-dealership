<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="650.0"
            prefWidth="740.0"
            styleClass="content-root"
            xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="dealership.controllers.SalesCustomerDetailController">

    <center>
        <VBox spacing="18.0" style="-fx-padding: 24;">
            <!-- Header -->
            <HBox alignment="CENTER_LEFT">
                <Label text="Customer details" styleClass="content-title"/>
                <Pane HBox.hgrow="ALWAYS"/>
                <fx:include source="/views/sales-header.fxml"/>
                <Button text="â€¹" onAction="#handleBack" styleClass="btn-back-mech"/>
            </HBox>

            <!-- Main card -->
            <VBox spacing="26.0" style="-fx-background-color: white; -fx-padding: 56 70 56 70;">

                <Label text="Personal information" styleClass="section-title"/>

                <!-- Full name -->
                <HBox spacing="14.0" alignment="CENTER_LEFT">
                    <Label text="Full name:" styleClass="detail-label"/>

                    <!-- view -->
                    <Label fx:id="fullNameValue"
                           text="-"
                           styleClass="detail-value"
                           HBox.hgrow="ALWAYS"/>

                    <!-- edit -->
                    <TextField fx:id="fullNameField"
                               promptText="Full name"
                               visible="false"
                               managed="false"
                               styleClass="detail-input"
                               HBox.hgrow="ALWAYS"/>
                </HBox>

                <!-- Phone -->
                <HBox spacing="14.0" alignment="CENTER_LEFT">
                    <Label text="Phone:" styleClass="detail-label"/>

                    <!-- view -->
                    <Label fx:id="phoneValue"
                           text="-"
                           styleClass="detail-value"
                           HBox.hgrow="ALWAYS"/>

                    <!-- edit -->
                    <TextField fx:id="phoneField"
                               promptText="Phone"
                               visible="false"
                               managed="false"
                               styleClass="detail-input"
                               HBox.hgrow="ALWAYS"/>
                </HBox>

                <!-- Email -->
                <HBox spacing="14.0" alignment="CENTER_LEFT">
                    <Label text="Email:" styleClass="detail-label"/>

                    <!-- view -->
                    <Label fx:id="emailValue"
                           text="-"
                           styleClass="detail-value"
                           HBox.hgrow="ALWAYS"/>

                    <!-- edit -->
                    <TextField fx:id="emailField"
                               promptText="Email"
                               visible="false"
                               managed="false"
                               styleClass="detail-input"
                               HBox.hgrow="ALWAYS"/>
                </HBox>

            </VBox>

            <!-- Actions OUTSIDE the card (below info) -->
            <HBox alignment="CENTER_RIGHT" spacing="14.0" style="-fx-padding: 6 0 0 0;">

                <Button fx:id="editButton"
                        text="Edit"
                        onAction="#handleEdit"
                        styleClass="btn-secondary"
                        style="-fx-font-size: 18px; -fx-padding: 14 36; -fx-min-width: 160px;"/>

                <Button fx:id="saveButton"
                        text="Save"
                        onAction="#handleSave"
                        visible="false"
                        managed="false"
                        styleClass="btn-primary"
                        style="-fx-font-size: 18px; -fx-padding: 14 36; -fx-min-width: 160px;"/>

                <Button fx:id="cancelButton"
                        text="Cancel"
                        onAction="#handleCancel"
                        visible="false"
                        managed="false"
                        styleClass="btn-secondary"
                        style="-fx-font-size: 18px; -fx-padding: 14 36; -fx-min-width: 160px;"/>

                <Button fx:id="deleteButton"
                        text="Delete customer"
                        onAction="#handleDelete"
                        styleClass="danger-button"
                        style="-fx-min-width: 200px;"/>

            </HBox>

        </VBox>
    </center>

</BorderPane>


