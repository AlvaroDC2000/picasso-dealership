<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="650.0"
            prefWidth="740.0"
            styleClass="content-root"
            xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="dealership.controllers.SalesCustomerDetailController">

    <center>
        <VBox spacing="18.0" style="-fx-padding: 24;">

            <!-- Header -->
            <HBox alignment="CENTER_LEFT">
                <Label text="Customer details" styleClass="content-title"/>
                <Pane HBox.hgrow="ALWAYS"/>
                <Button text="&lt;" onAction="#handleBack" styleClass="btn-back"/>
            </HBox>

            <!-- Main card -->
            <VBox spacing="26.0" style="-fx-background-color: white; -fx-padding: 56 70 56 70;">

                <Label text="Personal information"
  					 styleClass="section-title"/>

                <HBox spacing="14.0" alignment="CENTER_LEFT">
                    <Label text="Full name:" styleClass="detail-label"/>
                    <Label fx:id="fullNameValue" text="-" styleClass="detail-value"/>
                </HBox>

                <HBox spacing="14.0" alignment="CENTER_LEFT">
                    <Label text="Phone:" styleClass="detail-label"/>
                    <Label fx:id="phoneValue" text="-" styleClass="detail-value"/>
                </HBox>

                <HBox spacing="14.0" alignment="CENTER_LEFT">
                    <Label text="Email:" styleClass="detail-label"/>
                    <Label fx:id="emailValue" text="-" styleClass="detail-value"/>
                </HBox>

            </VBox>

        </VBox>
    </center>

</BorderPane>
