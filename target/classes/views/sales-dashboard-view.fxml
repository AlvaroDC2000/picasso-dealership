<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Priority?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      spacing="18.0"
      styleClass="content-root">

    <padding>
        <Insets top="22" right="26" bottom="22" left="26"/>
    </padding>

    <Label text="Stock" styleClass="content-title"/>

    <ListView fx:id="stockList" prefHeight="240.0">
        <placeholder>
            <Label text="No stock loaded yet."/>
        </placeholder>
    </ListView>

    <Label text="Active proposals" styleClass="content-title"/>

    <ListView fx:id="activeProposalsList" prefHeight="240.0">
        <placeholder>
            <Label text="No proposals loaded yet."/>
        </placeholder>
    </ListView>

</VBox>
