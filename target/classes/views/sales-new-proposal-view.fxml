<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="650.0"
            prefWidth="740.0"
            styleClass="content-root"
            xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="dealership.controllers.SalesNewProposalController">

    <center>
        <VBox spacing="18.0" style="-fx-padding: 24;">

            <HBox alignment="CENTER_LEFT">
                <Label text="New proposal" styleClass="content-title"/>
                <Pane HBox.hgrow="ALWAYS"/>
                <fx:include source="/views/sales-header.fxml"/>
                <Button text="‹" onAction="#handleBack" styleClass="btn-back-mech"/>
            </HBox>

            <VBox spacing="26.0" style="-fx-background-color: white; -fx-padding: 56 70 56 70;">

                <HBox spacing="14.0" alignment="CENTER_LEFT">
                    <Label text="Customer:" styleClass="detail-label"/>
                    <ComboBox fx:id="customerCombo" prefWidth="360.0"/>
                </HBox>

                <HBox spacing="14.0" alignment="CENTER_LEFT">
                    <Label text="Vehicle:" styleClass="detail-label"/>
                    <ComboBox fx:id="vehicleCombo" prefWidth="360.0"/>
                </HBox>

                <HBox spacing="14.0" alignment="CENTER_LEFT">
                    <Label text="Price (€):" styleClass="detail-label"/>
                    <TextField fx:id="priceField" prefWidth="200.0"/>
                </HBox>

                <HBox spacing="14.0" alignment="TOP_LEFT">
                    <Label text="Notes :" styleClass="detail-label"/>
                    <TextArea fx:id="notesArea" prefWidth="420.0" prefRowCount="3" wrapText="true"/>
                </HBox>

                <HBox alignment="CENTER_RIGHT" style="-fx-padding: 12 0 0 0;">
                    <Button text="Create proposal" onAction="#handleCreateProposal" styleClass="btn-primary"/>
                </HBox>

            </VBox>

        </VBox>
    </center>

</BorderPane>
